<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Fonts -->
    
    <SolidColorBrush po:Freeze="true" x:Key="defaultFontColor" Color="Black"/>

    <SolidColorBrush po:Freeze="true" x:Key="alternativeFontColor" Color="White"/>

    <!-- Colours -->

    <SolidColorBrush po:Freeze="true" x:Key="defaultLineColor" Color="Black"/>

    <SolidColorBrush po:Freeze="true" x:Key="activeColor" Color="#2EAE80"/>

    <SolidColorBrush po:Freeze="true" x:Key="pendingColor" Color="#00BCF2"/>

    <SolidColorBrush po:Freeze="true" x:Key="inactiveColor" Color="#D5D5D5"/>

    <SolidColorBrush po:Freeze="true" x:Key="warningColor" Color="#FF3232"/>
    
    <!-- Backgrounds -->

    <SolidColorBrush po:Freeze="true" x:Key="defaultBackground" Color="White"/>

    <SolidColorBrush po:Freeze="true" x:Key="alternativeBackground" Color="#5C4B43"/>

    <SolidColorBrush po:Freeze="true" x:Key="highlightBackground" Color="#F4ECE9"/>

    <SolidColorBrush po:Freeze="true" x:Key="headerBackground" Color="#BAA59D"/>
    
    <!-- Timeline -->

    <SolidColorBrush po:Freeze="true" x:Key="gridVerticalBrush" Color="#B8B8B8"/>

    <SolidColorBrush po:Freeze="true" x:Key="gridHozitalBrush" Color="#E7E4EB"/>



</ResourceDictionary>