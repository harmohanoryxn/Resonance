<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Font">
        <Setter Property="Label.FontFamily" Value="Segoe UI" />
        <Setter Property="Label.Foreground" Value="Black" />
    </Style>

    <Style x:Key="HeaderFont" BasedOn="{StaticResource Font}">
        <Setter Property="Label.FontSize" Value="48" />
    </Style>

    <Style x:Key="WizardHeaderFont" BasedOn="{StaticResource HeaderFont}">
        <Setter Property="Label.Foreground" Value="WhiteSmoke" />
    </Style>

    <Style x:Key="TitleFont" BasedOn="{StaticResource Font}">
        <Setter Property="Label.FontSize" Value="36" />
    </Style>

    <Style x:Key="TitleFontHighlighted" BasedOn="{StaticResource TitleFont}">
        <Setter Property="Label.Foreground" Value="#3590D0" />
    </Style>

    <Style x:Key="WizardTitleFont" BasedOn="{StaticResource TitleFont}">
        <Setter Property="Label.Foreground" Value="#3590D0" />
    </Style>

    <Style x:Key="RadioButtonFont" BasedOn="{StaticResource TitleFont}">
        <Setter Property="Label.FontSize" Value="18" />
    </Style>

    <Style x:Key="WizardRadioButtonFont" BasedOn="{StaticResource RadioButtonFont}">
        <Setter Property="Label.FontSize" Value="36" />
    </Style>

    <Style x:Key="StandardButtonFont" BasedOn="{StaticResource Font}">
        <Setter Property="Label.FontSize" Value="20" />
        <Setter Property="Label.Foreground" Value="White" />
    </Style>


    <Style x:Key="SubTitleFont" BasedOn="{StaticResource Font}">
        <Setter Property="Label.FontSize" Value="22" />
        <Setter Property="Label.Foreground" Value="Gray" />
    </Style>

    <Style x:Key="ItemHeader" BasedOn="{StaticResource Font}">
        <Setter Property="Label.FontSize" Value="22" />
    </Style>

    <Style x:Key="ItemPairHeader" BasedOn="{StaticResource Font}">
        <Setter Property="Label.FontSize" Value="18" />
        <Setter Property="Label.Foreground" Value="Gray" />
    </Style>

    <Style x:Key="ItemDescription" BasedOn="{StaticResource Font}">
        <Setter Property="Label.FontSize" Value="18" />
    </Style>

    <Style x:Key="ItemDescriptionHighlighted" BasedOn="{StaticResource ItemDescription}">
        <Setter Property="Label.Foreground" Value="#3590D0" />
    </Style>


    <Style x:Key="DropDownText" BasedOn="{StaticResource Font}">
        <Setter Property="Label.FontSize" Value="28" />
    </Style>

    <Style x:Key="TextBoxFontStyle" BasedOn="{StaticResource Font}">
        <Setter Property="TextBox.BorderBrush" Value="#808080" />
        <Setter Property="TextBox.Background" Value="#F1F1F1" />
        <Setter Property="TextBox.BorderThickness" Value="1" />
        <Setter Property="Label.FontSize" Value="22" />
        <Setter Property="Label.Foreground" Value="#404040" />
        <Setter Property="Control.Height" Value="72" />
    </Style>


    <Style x:Key="HighlightedText">
        <Setter Property="Label.FontSize" Value="28" />
        <Setter Property="Label.FontFamily" Value="Segoe UI" />
        <Setter Property="Label.Foreground" Value="#3590D0" />
    </Style>

